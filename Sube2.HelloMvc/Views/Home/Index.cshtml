@{
    ViewData["Title"] = "Anasayfa";
}

<div class="container mt-5">
    <h1 class="display-4 text-center mb-5">Hoş Geldiniz!</h1>
    <p class="lead text-center mb-5">İnternet Programcılığı Ödevi Düzenlemesi</p>
    <div class="row justify-content-center">
        <div class="col-md-4 mb-4">
            <div class="card text-center shadow-sm">
                <i class="fas fa-user-graduate fa-5x text-primary mt-3"></i>
                <div class="card-header bg-primary text-white">
                    Öğrenci İşlemleri
                </div>
                <div class="card-body">
                    <p class="card-text">Öğrenci ekleme, düzenleme ve silme işlemleri için tıklayın.</p>
                    <a href="@Url.Action("Index", "Student")" class="btn btn-primary">Öğrenci İşlemleri</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card text-center shadow-sm">
                <i class="fas fa-book fa-5x text-danger mt-3"></i>
                <div class="card-header bg-danger text-white">
                    Ders İşlemleri
                </div>
                <div class="card-body">
                    <p class="card-text">Ders ekleme, düzenleme ve silme işlemleri için tıklayın.</p>
                    <a href="@Url.Action("Index", "Ders")" class="btn btn-danger">Ders İşlemleri</a>
                </div>
            </div>
        </div>
    </div>
</div>
