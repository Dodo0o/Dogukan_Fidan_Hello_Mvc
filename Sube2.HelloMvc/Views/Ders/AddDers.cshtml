@model Sube2.HelloMvc.Models.Ders

@{
    ViewData["Title"] = "Ders Ekle";
}

<div class="container mt-5">
    <h1 class="display-4 text-center mb-4">Ders Ekle</h1>
    <form asp-action="AddDers" method="post" class="form-horizontal">
        <div class="form-group mb-3">
            <label asp-for="DersKodu" class="form-label"></label>
            <input asp-for="DersKodu" class="form-control" />
            <span asp-validation-for="DersKodu" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Dersad" class="form-label"></label>
            <input asp-for="Dersad" class="form-control" />
            <span asp-validation-for="Dersad" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Kredi" class="form-label"></label>
            <input asp-for="Kredi" class="form-control" />
            <span asp-validation-for="Kredi" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Kaydet" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary ms-2">Geri Dön</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
