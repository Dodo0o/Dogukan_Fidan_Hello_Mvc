@model Sube2.HelloMvc.Models.OgrenciDersViewModel

@{
    ViewData["Title"] = "Öğrenciye Ders Ata";
}

<div class="container mt-5">
    <h1 class="display-4 text-center mb-4">Öğrenciye Ders Ata</h1>
    <form asp-action="AddDersForOgrenci" method="post" class="form-horizontal">
        <input type="hidden" asp-for="Ogrenciid" />
        <div class="form-group mb-3">
            <label for="SelectedDersId" class="form-label">Ders Seç</label>
            <select asp-for="SelectedDersId" class="form-control" asp-items="ViewBag.Dersler"></select>
        </div>
        <div class="form-group">
            <input type="submit" value="Ders Ata" class="btn btn-primary" />
            <a asp-action="Index" asp-controller="Student" class="btn btn-secondary ms-2">Geri Dön</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
