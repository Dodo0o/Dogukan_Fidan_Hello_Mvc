@model Sube2.HelloMvc.Models.Ogrenci
@{
    ViewData["Title"] = "Öğrenci Ekle";
}

<div class="container mt-5">
    <h1 class="display-4 text-center mb-4">Öğrenci Ekle</h1>
    <form asp-action="AddStudent" asp-controller="Student" method="post" class="form-horizontal">
        <div class="form-group mb-3">
            <label asp-for="Ad" class="form-label"></label>
            <input asp-for="Ad" class="form-control" />
            <span asp-validation-for="Ad" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Soyad" class="form-label"></label>
            <input asp-for="Soyad" class="form-control" />
            <span asp-validation-for="Soyad" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Numara" class="form-label"></label>
            <input asp-for="Numara" class="form-control" />
            <span asp-validation-for="Numara" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Kaydet" class="btn btn-primary" />
            <a asp-action="Index" asp-controller="Student" class="btn btn-secondary ms-2">Geri Dön</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
